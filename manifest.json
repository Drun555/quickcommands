{
  "manifest_version": 2,
  "name": "Quick Commands",
  "version": "0.0.2",
  "description": "An add-on that tries to mimic Vivaldi's Quick commands window",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "content_scripts": [],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "history"
  ],

  "commands": {
    "quick-commands": {
      "suggested_key": { "default": "Alt+Shift+R" },
      "description": "Open the quick-commands window"
    }
  }
}
